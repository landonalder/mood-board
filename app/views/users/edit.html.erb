<div class="panel panel-default" style="width: 450px">
  <div class="panel-heading text-center">
    <%= image_tag(@user.image_url, class: 'img-larg img-rounded') %>
    <h3 class="panel-title"><%= @user.full_name %></h3>
  </div>
  <div class="panel-body">
    <%= form_for(@user, html: { class: 'form-horizontal' }) do |user| %>
      <div class="form-group">
        <label for="login" class="col-sm-2 control-label">Login</label>
        <div class="col-sm-10">
          <%=
            user.text_field(
              :login,
              size: 30,
              id: 'login',
              class: 'form-control'
            )
          %>
        </div>
      </div>
      <%= user.submit('Save Changes', class: 'btn btn-success') %>
      <%= link_to('Delete User', user_path(@user), method: :delete, class: 'btn btn-danger') %>
      <% if flash[:success] %>
        <span class="glyphicon glyphicon-ok text-success"></span>
      <% end %>
    <% end %>
  </div>
</div>
