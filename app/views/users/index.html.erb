<% def user_link(user) %>
<% return edit_user_registration_path if user == current_user %>
<% user_path(user) %>
<% end %>
<br/>
<% @users.each do |user| %>
  <%= link_to(
        image_tag(
          user.image_url,
          alt: user.full_name,
          title: user.full_name,
          id: user.slug,
          class: 'img-small img-rounded'
        ),
        user_link(user)
      )%>
<% end %>