<% def title(mood) %>
<% title = mood.user.full_name %>
<% if mood.user == current_user %>
<% title += " #{link_to("Profile", user_path(slug: current_user), class: 'right-justify')}" %>
<% end %>
<% title %>
<% end %>

<% def trigger(mood) %>
<% return 'click' if mood.user == current_user %>
<% 'hover' %>
<% end %>

<% def content(mood) %>
<% return mood.status_text unless mood.user == current_user %>
<% (text_area :mood, :status_text, class: 'form-control', cols: 50, rows: 3, value: mood.status_text).gsub('"', '\'') %>
<% end %>

<% @moods.each do |mood| %>
  <%= image_tag(
    mood.user.image_url,
    style: "top:#{mood.top}px;left:#{mood.left}px",
    alt: mood.user.full_name,
    title: title(mood),
    'data-content' => content(mood),
    'data-trigger' => trigger(mood),
    id: mood.user.slug,
    class: "img-small img-rounded border #{mood.color}"
  )%>
<% end %>
